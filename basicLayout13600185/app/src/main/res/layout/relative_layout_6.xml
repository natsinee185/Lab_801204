<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg"
            android:scaleType="centerCrop"
            />

         <ImageView
         android:layout_width="120dp"
         android:layout_height="120dp"
             android:src="@drawable/logo"
             />

    <TextView
        android:id="@+id/textAnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A New Flipboad"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textRel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relmaglned,with over
  300,000 newtopics"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textAnew"

       />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_below="@+id/textRel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />



    <Button
        android:id="@+id/btGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:background="#ff22"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textRel"
        android:layout_marginTop="150dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Continuing.you accept the Term of User and Pricacy Policy"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
