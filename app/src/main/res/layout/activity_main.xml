<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">


        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">


        <Button
            android:id="@+id/button01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EBE1DD"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />
        <Button
            android:id="@+id/button02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ECCBCA"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/button03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#75839C"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />
        <Button
            android:id="@+id/button04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99A9BF"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />
        <Button
            android:id="@+id/button05"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C3CCD5"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/button06"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDE2E5"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />

    </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/colorView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:text="235 255 221"
            android:gravity="center"
            android:background="#DDE2E5"

            >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="//RGB"
            android:layout_below="@+id/colorView"
            android:layout_alignLeft="@+id/colorView"
            android:textSize="20dp"/>

    </RelativeLayout>

</RelativeLayout>


